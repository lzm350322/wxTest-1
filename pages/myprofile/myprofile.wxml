<!--pages/myprofile/myprofile.wxml-->
<view class="container">

  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" 
            bindgetuserinfo="getUserInfo">获取头像昵称 </button>
    <block  wx:else>
      <view class="tr">
        <view class="td">
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        </view><view class="td">
          <text>{{userInfo.nickName}}</text>
        </view><view class="td">
          <text></text>
        </view><view class="td">
          <text>设置</text>
        </view>       
      </view>
    </block>
  </view>

  <view class="tr">
    <view class="td">
      <text>10</text>
    </view><view class="td">
        <text>5</text>
    </view><view class="td">
        <text>8</text>
    </view>       
  </view>
  <view class="tr">
    <view class="td">
      <text>我的积分</text>
    </view><view class="td">
        <text>消息</text>
    </view><view class="td">
        <text>收藏/历史</text>
    </view>       
  </view>


</view>
