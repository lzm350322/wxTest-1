<view class="section">
  <view class="flex-wrp" style="flex-direction:column;">
    <view class="flex-item form">
      <input class="formInput" type="digit" bindblur='userNumber' value="{{Guess}}" bindinput='GuessInput' placeholder="请输入数字(0-4位)" />
    </view>
  </view>
  <view class="flex-item">

    <button class="formBtn" bindtap='sub'>确认</button>
  </view>
  <view class="flex-item form" style='height:100%;'>
    <text class='formText' decode="{{true}}">&nbsp;提示信息:</text>
    <text class='formText' decode="{{true}}">{{result}}</text>
  </view>
  <view class="flex-item form" style='height:100%;'>
<text class='formText' decode="{{true}}">&nbsp;你用了(步):</text>
<text class='formText' decode="{{true}}">{{step}}</text>
</view>
</view>